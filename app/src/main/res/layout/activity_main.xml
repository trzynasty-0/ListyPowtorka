<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/elementET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nowy element"
                android:inputType="text"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/priorytetSp"
                android:entries="@array/priorytet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/dodajB"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/Crimson"
            android:textSize="24sp"
            android:text="Dodaj" />
    </LinearLayout>

    <ListView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/Crimson"
        android:dividerHeight="2dp"
        >

    </ListView>

    <TextView
        android:id="@+id/ileZostałoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zostało: 0" />

</LinearLayout>